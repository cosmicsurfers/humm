{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "id": "http://example.com/publish/article.json",
  "type": "object",
  "required": [
    "title",
    "status",
    "content",
    "uuid",
    "author"
  ],
  "properties": {
    "title": {
      "type": "string",
      "pattern": ".+"
    },
    "content": {
      "type": "string",
      "pattern": ".+"
    },
    "author": {
      "type": "string",
      "pattern": ".+"
    },
    "pubdate": {
      "type": "string",
      "pattern": ".+"
    },
    "lastupdate": {
      "type": "string",
      "pattern": ".+"
    },
    "tags": {
      "type": "array",
      "items": {}
    },
    "uuid": {
      "type": "string",
      "pattern": ".+"
    }
  }
}
