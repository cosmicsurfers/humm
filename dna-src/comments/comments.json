{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/root.json",
  "type": "object",
  "title": "The Root Schema",
  "required": [
    "uuid",
    "parentId",
    "body",
    "author"
  ],
  "properties": {
    "uuid": {
      "$id": "#/properties/uuid",
      "type": "string",
      "title": "The UUID Schema",
      "default": "",
      "examples": [
        "3d97d337-1444-4104-b1b4-c48e9404e8db"
      ],
      "pattern": "^(.*)$"
    },
    "rootParentId": {
      "$id": "#/properties/rootParentId",
      "type": "string",
      "title": "The RootParentId Schema",
      "default": "",
      "examples": [
        "28fcbff4-8d2f-494c-a2c5-9dd845f1ab5a"
      ],
      "pattern": "^(.*)$"
    },
    "parentId": {
      "$id": "#/properties/parentId",
      "type": "string",
      "title": "The ParentId Schema",
      "default": "",
      "examples": [
        "28fcbff4-8d2f-494c-a2c5-9dd845f1ab5a"
      ],
      "pattern": "^(.*)$"
    },
    "body": {
      "$id": "#/properties/body",
      "type": "string",
      "title": "The Body Schema",
      "default": "",
      "examples": [
        "I enjoyed reading this article because it was well written."
      ],
      "pattern": ".+"
    },
    "author": {
      "$id": "#/properties/author",
      "type": "string",
      "title": "The Author Schema",
      "default": "",
      "examples": [
        "Pedro Picapiedra"
      ],
      "pattern": "^(.*)$"
    },
    "createdAt": {
      "$id": "#/properties/createdAt",
      "type": "string",
      "title": "The Createdat Schema",
      "default": "",
      "examples": [
        "2018-11-11"
      ],
      "pattern": "^(.*)$"
    },
    "updatedAt": {
      "$id": "#/properties/updatedAt",
      "type": "string",
      "title": "The Updatedat Schema",
      "default": "",
      "examples": [
        "2018-11-12"
      ],
      "pattern": "^(.*)$"
    }
  }
}
